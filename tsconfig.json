{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "packages/core",
        "baseUrl": ".",
        "declaration": true,
        "downlevelIteration": true,
        "declarationDir": "packages/core",
        "allowJs": true,
        "checkJs": false,
    },
    "include": ["./src/"],
    "exclude": ["./examples/"]
}
